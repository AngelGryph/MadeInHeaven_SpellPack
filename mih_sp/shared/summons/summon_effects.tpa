	editstring	= ~opcode=>67 parameter1=>5 timing=>1 probability1=>100 resource=>"%summon%" resource2=>"%effect%"~
      END
    END
    ELSE
    BEGIN
      LAUNCH_ACTION_FUNCTION edit_effect
        STR_VAR
	effect		= "%summon%"
	editstring	= ~match=>"opcode = 67" resource2=>"%effect%"~
      END
    END
