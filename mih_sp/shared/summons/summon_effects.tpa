  ACTION_PHP_EACH summon_effect AS summon => effect
  BEGIN
    ACTION_IF NOT FILE_EXISTS_IN_GAME "%summon%.eff"
    BEGIN
      LAUNCH_ACTION_FUNCTION make_effect
	STR_VAR
