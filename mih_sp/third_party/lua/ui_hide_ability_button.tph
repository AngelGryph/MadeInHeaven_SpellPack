function dwHideButton(button)

	_,k=dwFindClassKit()
	if not dwHideButtonData[k] then 
		return false
	end
	str=dwHideButtonData[k][button]
	if not str then
		return false
	end
	tooltip=actionBarTooltip[button]
	if string.find(tooltip,str) then
		return true
	else
	    return false
	end

end
